<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tentang_kami"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E5A62"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gobraille.gobraille.tentang_kami">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:text="TENTANG KAMI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/tentang" />

        <at.markushi.ui.CircleButton
            app:cb_color="#303030"
            app:cb_pressedRingWidth="8dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:id="@+id/tentang_back"
            android:src="@drawable/ic_tentang_kami_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:text="media pembelajaran bagi
tunanetra untuk mengenal
huruf braile"
            android:id="@+id/tentang_desc"
            android:layout_centerHorizontal="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:text="UNIVERSITAS NEGERI YOGYAKARTA"
            android:id="@+id/tentang_nama"/>

    </android.support.v7.widget.LinearLayoutCompat>

    <TextView
        android:text="Tekan &amp; tahan pada logo untuk kembali ke Menu Utama."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
